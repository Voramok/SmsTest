<Window x:Class="SmsTestDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmsTestDesktopApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView Name="EnvVarListView">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Поле" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Значение" Width="300" DisplayMemberBinding="{Binding Value}"/>
                    <GridViewColumn Header="Комментарий" Width="300" DisplayMemberBinding="{Binding Value}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Save" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
